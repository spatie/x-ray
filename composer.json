{
    "name": "spatie/x-ray",
    "description": "Quickly scan source code for calls to Ray",
    "license": "MIT",
    "keywords": [
        "spatie",
        "ray",
        "search",
        "permafrost"
    ],
    "authors": [
        {
            "name": "Patrick Organ",
            "email": "patrick@permafrost.dev",
            "homepage": "https://permafrost.dev",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/spatie/x-ray",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/permafrost-dev"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/spatie"
        }
    ],
    "require": {
        "php": "^8.0",
        "permafrost-dev/code-snippets": "^1.2.0",
        "permafrost-dev/php-code-search": "^1.10.5",
        "symfony/console": "^5.3|^6.0|^7.0",
        "symfony/finder": "^5.3|^6.0|^7.0",
        "symfony/yaml": "^5.3|^6.0|^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10.59",
        "phpunit/phpunit": "^9.5",
        "spatie/phpunit-snapshot-assertions": "^4.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Spatie\\XRay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\XRay\\Tests\\": "tests"
        }
    },
    "bin": "bin/x-ray",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit"
    }
}
